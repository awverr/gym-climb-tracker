<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/num_attempts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="20sp"
            android:text="@string/num_attempts_label" />
        <TextView
            android:id="@+id/num_attempt_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/route_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="20sp"
            android:text="@string/route_notes_label" />
        <TextView
            android:id="@+id/route_notes_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="20sp"
            android:text="@string/sent_spinner_label" />
        <Spinner
            android:id="@+id/sent_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

</merge>